{
    "name": "hotpayments/php-sdk",
    "type": "library",
    "description": "Modern PHP SDK for HotPayments API - Handle payments, subscriptions, PIX transactions with a fluent, easy-to-use interface",
    "keywords": [
        "hotpayments",
        "payments",
        "pix",
        "subscription",
        "billing",
        "api",
        "sdk",
        "php",
        "laravel"
    ],
    "homepage": "https://github.com/hotpayments/php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Andre Felipe",
            "email": "contato@hotpayments.net",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-fileinfo": "*",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
      "laravel/pint": "^1.20"
    },
    "autoload": {
        "psr-4": {
            "HotPayments\\": "src/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "support": {
        "issues": "https://github.com/hotpayments/php-sdk/issues",
        "source": "https://github.com/hotpayments/php-sdk",
        "docs": "https://github.com/hotpayments/php-sdk#readme"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}